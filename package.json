{
  "name": "@emotionagency/emotion-scroll",
  "version": "2.0.0",
  "description": "A library that animates the native scroll value using Virtual Scroll and custom scrollbar",
  "main": "./dist/index.umd.js",
  "module": "./dist/index.es.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.es.js",
      "require": "./dist/index.umd.js",
      "types": "./dist/index.d.ts"
    },
    "./types": "./dist/index.d.ts"
  },
  "files": [
    "dist"
  ],
  "keywords": [
    "js",
    "utilities",
    "javascript",
    "smoothscroll",
    "scrollbar",
    "virtual scroll",
    "scroll"
  ],
  "scripts": {
    "type:build": "tsc --emitDeclarationOnly --declaration --declarationDir dist",
    "build": "vite build && npm run type:build",
    "pub": "npm run build && npm version patch && npm publish"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Emotion-Agency/emotion-scroll.git"
  },
  "author": "emotion-agency <hello@emotion-agency.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/Emotion-Agency/emotion-scroll/issues"
  },
  "homepage": "https://github.com/Emotion-Agency/emotion-scroll.git#readme",
  "devDependencies": {
    "@types/node": "^20.4.2",
    "typescript": "^5.1.6",
    "vite": "^5.0.0"
  },
  "dependencies": {
    "@emotionagency/utils": "^1.1.3",
    "tiny-emitter": "^2.1.0",
    "virtual-scroll": "^2.1.1"
  }
}